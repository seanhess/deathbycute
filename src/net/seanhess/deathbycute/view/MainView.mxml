<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" height="100%" 
	clipContent="false"
	xmlns:view="net.seanhess.deathbycute.view.*" xmlns:model="net.seanhess.deathbycute.model.*">

	<mx:Script>
		<![CDATA[
			protected function onFight():void
			{
				game.visible = true;
				login.visible = false;
				
				// Add me to the current list of tokens // 
				
				// I also need to set the game data at this point, and connect to the server //
				game.game.currentPlayer = player; 
			}
		]]>
	</mx:Script>	
	
	<model:Player id="player" name="{login.playerName}">
		<model:character>
			<model:Character image="{login.selectedCharacter.icon}"/>
		</model:character>
	</model:Player>
	
	<view:GameView id="game" visible="false" game="{game}"/>
	<view:LoginView id="login" fight="onFight()"/>

	<!-- MODEL -->	
	<test:MockData id="mock"/>
	<model:Game id="game" mockData="{mock}"/>
	
	<!-- SHARING -->
	

	
</mx:Canvas>
